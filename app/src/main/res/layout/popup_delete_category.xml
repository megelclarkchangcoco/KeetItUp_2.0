<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="24dp"
    android:layout_gravity="center">

    <!-- Trash Can Icon -->
    <ImageView
        android:id="@+id/trash_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_bin"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Title: Delete Category -->
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Category"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/fira_sans_bold"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to Remove this category? This action cannot be undone."
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/fira_sans"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/card_default_color"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="8dp"
            app:cornerRadius="16dp"
            app:strokeColor="#FFB300"
            app:strokeWidth="1dp"/>

        <!-- Delete Button -->
        <Button
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/custom_red"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

    </LinearLayout>
</LinearLayout>